<div class="container mx-auto px-4 py-8">
  <div class="relative mb-6">
    <%# Back Button %>
    <%= link_to @show_path, class: "back-button-movie", title: "Go back" do %>
      <i data-lucide="arrow-left" style="color: var(--text-tertiary);"></i>
    <% end %>

    <h1 class="page-title text-center">Edit Movie</h1>
  </div>
  <%= render "form", movie: @movie %>
</div>

<style>
.back-button-movie {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border: 1px solid var(--border-color);
  cursor: pointer;
  transition: all 0.2s ease;
  opacity: 0.8;
}

.back-button-movie:hover {
  opacity: 1;
  transform: translateY(-50%) translateX(-4px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
</style>
