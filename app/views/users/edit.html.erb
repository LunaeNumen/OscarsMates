<section class="edit-account py-10">
  <div class="container mx-auto px-4">
    <h1 class="text-center text-2xl font-semibold text-slate-900">Edit Account</h1>

    <div class="mt-8 mx-auto max-w-2xl">
      <!-- Avatar Section -->
      <div class="mb-8 p-6 bg-white rounded-lg border border-slate-200 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900 mb-4">Profile Picture</h2>

        <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6">
          <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, data: { controller: "avatar-upload" } do |form| %>
            <div class="relative" data-avatar-upload-target="preview">
              <%= render "shared/avatar", user: @user, size: :xl, editable: true %>
              <%= form.file_field :avatar,
                    id: "avatar-upload",
                    accept: "image/png,image/jpeg,image/gif,image/webp",
                    class: "sr-only",
                    data: { avatar_upload_target: "input", action: "change->avatar-upload#preview change->avatar-upload#submit" } %>
            </div>

            <% if @user.errors[:avatar].any? %>
              <div class="mt-3 text-sm text-red-600">
                <%= @user.errors[:avatar].join(", ") %>
              </div>
            <% end %>
          <% end %>

          <div class="flex-1">
            <p class="text-sm text-slate-600 mb-2">Click on your avatar to upload a new photo</p>
            <p class="text-xs text-slate-500">PNG, JPG, GIF or WebP. Max 5MB.</p>

            <% if @user.avatar.attached? %>
              <div class="mt-4">
                <%= button_to avatar_user_path(@user),
                      method: :delete,
                      class: "btn-danger",
                      data: { turbo_confirm: "Remove your avatar?" } do %>
                  Remove avatar
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Account Details Section -->
      <div class="p-6 bg-white rounded-lg border border-slate-200 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900 mb-4">Account Details</h2>
        <%= render "form", user: @user %>
      </div>

      <!-- Danger Zone Section -->
      <div class="mt-8 p-6 bg-red-50 rounded-lg border border-red-200">
        <h2 class="text-lg font-semibold text-red-900 mb-2">Danger Zone</h2>
        <p class="text-sm text-red-700 mb-4">Once you delete your account, there is no going back. Please be certain.</p>
        <button type="button" class="btn-danger" data-hs-overlay="#delete-account-modal">
          <i data-lucide="trash-2"></i> Delete Account
        </button>
      </div>
    </div>
  </div>
</section>

<!-- Delete Account Confirmation Modal -->
<div id="delete-account-modal" class="hs-overlay hidden w-full h-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto pointer-events-none" data-controller="delete-account">
  <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto min-h-[calc(100%-3.5rem)] flex items-center">
    <div class="w-full max-w-md mx-auto flex flex-col bg-white border border-red-300 shadow-lg rounded-xl pointer-events-auto">
      <!-- Header -->
      <div class="flex justify-between items-center py-3 px-4 border-b border-red-200 bg-red-50 rounded-t-xl">
        <h3 class="font-bold text-red-900">
          Delete Account
        </h3>
        <button type="button" class="flex justify-center items-center w-7 h-7 text-sm font-semibold rounded-full border border-transparent text-red-900 hover:bg-red-100 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#delete-account-modal">
          <span class="sr-only">Close</span>
          <i data-lucide="x" class="w-4 h-4"></i>
        </button>
      </div>

      <!-- Body -->
      <div class="p-4 overflow-y-auto">
        <div class="mb-4">
          <p class="text-sm text-red-800 mb-3 font-semibold">This action cannot be undone. This will permanently delete your account and remove all your data including:</p>
          <ul class="text-sm text-red-700 space-y-1 mb-4 list-disc list-inside">
            <li>All your movie reviews and ratings</li>
            <li>All your favorite movies</li>
            <li>All your Oscar predictions</li>
            <li>Your follow relationships</li>
            <li>Your profile picture</li>
          </ul>
          <p class="text-sm text-red-800 mb-4">Please type <strong>"I want to leave Oscars Mates"</strong> to confirm:</p>
        </div>

        <%= form_with url: user_path(@user), method: :delete, local: true do |f| %>
          <div class="mb-4">
            <input
              type="text"
              class="w-full px-3 py-2 border border-red-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent"
              placeholder="Type to confirm..."
              data-delete-account-target="input"
              data-action="input->delete-account#checkInput"
            >
          </div>

          <div class="flex gap-3">
            <button type="button" class="btn-outline-oscar flex-1" data-hs-overlay="#delete-account-modal">
              Cancel
            </button>
            <%= f.submit "Delete Account",
                class: "flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 text-sm font-semibold rounded-lg border-2 transition-all duration-200 bg-slate-100 border-slate-300 text-slate-400 cursor-not-allowed",
                disabled: true,
                data: { delete_account_target: "submit" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>